    "@babel/core": "^7.20.2",
    "@babel/eslint-parser": "^7.19.1",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.0",
    "eslint": "^8.27.0"
  },
  "dependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.1.0",
    "node-fetch": "^3.2.10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jembi/openhim-mediator-utils.git"
  },
  "bugs": {
